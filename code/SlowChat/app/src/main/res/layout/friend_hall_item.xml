<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.dell.slowchat.ChatManage.CircleImageView
            android:id="@+id/friend_hall_headIcon"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friend_hall_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/friend_hall_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签"/>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/friend_hall_dynamicString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动态信息"/>
    
    <GridView
        android:id="@+id/friend_hall_gv"
        android:numColumns="auto_fit"
        android:layout_width="match_parent"
        android:columnWidth="100dp"
        android:layout_height="wrap_content">
    </GridView>



</LinearLayout>
