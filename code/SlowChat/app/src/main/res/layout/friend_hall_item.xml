<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.dell.slowchat.ChatManage.CircleImageView
            android:id="@+id/friend_hall_headIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:focusable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friend_hall_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/friend_hall_dynamicString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="动态信息" />

            <GridView
                android:id="@+id/friend_hall_gv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="auto_fit">

            </GridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/friend_hall_praise"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/friend_hall_praise" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点赞" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/friend_hall_comment"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/friend_hall_comment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
