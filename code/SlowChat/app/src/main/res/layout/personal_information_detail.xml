<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.slowchat.PersonalInformation.PersonalInformationDetail">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/personal_info_detail_user_name_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <android.support.constraint.Guideline
                android:id="@+id/guideline5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="100dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/personal_info_detail_user_name_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/personal_info_detail_user_name_title"
                android:textSize="18sp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/personal_info_detail_user_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:text="TextView"
                android:textSize="18sp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/personal_info_detail_user_email_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/personal_info_detail_user_email_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/personal_info_detail_user_email_title"
                android:textSize="18sp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/personal_info_detail_user_email"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                android:textSize="18sp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="100dp" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/personal_info_detail_user_integral_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/personal_info_detail_user_integral_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/personal_info_detail_user_integral_title"
                android:textSize="18sp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/personal_info_detail_user_integral"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                android:textSize="18sp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="100dp" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/personal_information_detail_user_signature_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personal_information_detail_user_signature_title_textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/personal_info_detail_user_signature_title"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/personal_information_detail_user_signature"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="@string/personal_info_detail_user_signature_default"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
