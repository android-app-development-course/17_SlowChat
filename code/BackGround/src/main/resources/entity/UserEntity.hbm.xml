<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.chat.entity.UserEntity" table="user" schema="chat">
        <id name="id">
            <column name="id" sql-type="smallint(5) unsigned"/>
        </id>
        <property name="email">
            <column name="email" sql-type="varchar(60)" length="60"/>
        </property>
        <property name="pwd">
            <column name="pwd" sql-type="varchar(60)" length="60"/>
        </property>
        <property name="signature">
            <column name="signature" sql-type="varchar(60)" length="60" not-null="true"/>
        </property>
        <property name="integral">
            <column name="integral" sql-type="int(11)"/>
        </property>
        <property name="status">
            <column name="status" sql-type="tinyint(4)"/>
        </property>
        <property name="img">
            <column name="img" sql-type="varchar(120)" length="120" not-null="true"/>
        </property>
        <property name="certificate">
            <column name="certificate" sql-type="varchar(60)" length="60" not-null="true"/>
        </property>
        <set name="friendsById" inverse="true">
            <key>
                <column name="source_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.chat.entity.FriendEntity"/>
        </set>
        <set name="friendsById_0" inverse="true">
            <key>
                <column name="target_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.chat.entity.FriendEntity"/>
        </set>
        <set name="friendAppliesById" inverse="true">
            <key>
                <column name="source_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.chat.entity.FriendApplyEntity"/>
        </set>
        <set name="friendAppliesById_0" inverse="true">
            <key>
                <column name="target_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.chat.entity.FriendApplyEntity"/>
        </set>
        <set name="messagesById" inverse="true">
            <key>
                <column name="source_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.chat.entity.MessageEntity"/>
        </set>
        <set name="messagesById_0" inverse="true">
            <key>
                <column name="target_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.chat.entity.MessageEntity"/>
        </set>
        <set name="userTagsById" inverse="true">
            <key>
                <column name="user_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.chat.entity.UserTagEntity"/>
        </set>
    </class>
</hibernate-mapping>