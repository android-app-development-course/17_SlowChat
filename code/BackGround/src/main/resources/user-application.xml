<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <bean id="userDao" class="com.chat.dao.UserDaoImpl"/>

    <bean id="user" class="com.chat.entity.User" scope="prototype"/>

    <bean id="registerService" class="com.chat.service.login.RegisterServiceImp"/>

    <bean id="loginService" class="com.chat.service.login.LoginServiceImp"/>

    <bean id="failureResponse" class="com.chat.application.Response" scope="prototype">
        <property name="map">
            <map>
                <entry key="code" value="1"/>
            </map>
        </property>
    </bean>

    <bean id="successResponse" class="com.chat.application.Response" scope="prototype">
        <property name="map">
            <map>
                <entry key="code" value="0"/>
            </map>
        </property>
    </bean>
</beans>